<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="CProvML.custom.commands.category">
      </category>
      <command
            name="Transform to X-CProvML"
            categoryId="CProvML.custom.commands.category"
            id="CProvML.custom.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="CProvML.custom.commands.sampleCommand"
            class="cprovml.custom.handlers.CProvHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="CProvML.custom.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="CProvML"
               mnemonic="M"
               id="CProvML.custom.menus.sampleMenu">
            <command
                  commandId="CProvML.custom.commands.sampleCommand"
                  mnemonic="S"
                  id="CProvML.custom.menus.sampleCommand">
            </command>
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeEditorId">
                  <or>
                     <equals
                           value="CProvML.presentation.CProvMLEditorID">
                     </equals>
                     <equals
                           value="CProvML.diagram.part.CProvMLDiagramEditorID">
                     </equals>
                  </or>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="CProvML.custom.toolbars.sampleToolbar">
            <command
                  commandId="CProvML.custom.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="CProvML.custom.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
